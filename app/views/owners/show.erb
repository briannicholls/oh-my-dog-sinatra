

<table class="w3-table w3-bordered w3-round">
  <tr>
    <th colspan="2"><h1><%= "#{@owner.first_name} #{@owner.last_name}" %></h1></th>
  </tr>

  <tr>
    <th colspan="2"><a href="/owners/<%= @owner.id %>/edit">Edit Owner</a></th>
  </tr>

  <tr>
    <td><label for="owner[name]">Name:</label></td>
    <td id="owner[name]"><%= "#{@owner.first_name} #{@owner.last_name}" %></td>
  </tr>

  <tr>
    <td><label for="owner[phone]">Phone #:</label></td>
    <td id="owner[phone]"><%= @owner.phone %></td>
  </tr>

  <tr>
    <td><label for="owner[phone2]">Phone 2 #:</label></td>
    <td id="owner[phone2]"><%= @owner.phone2 %></td>
  </tr>

  <tr>
    <td><label for="owner[address]">Address:</label></td>
    <td id="owner[address]"><%= @owner.address %></td>
  </tr>

  <tr>
    <td><label for="owner[zip_code]">Zip Code:</label></td>
    <td id="owner[zip_code]"><%= @owner.zip_code %></td>
  </tr>

  <tr>
    <td><label for="owner[apartment_number]">Apartment #:</td>
      <td id="owner[apartment_number]"><%= @owner.apartment_number %></td>
  </tr>

  <tr>
    <td><label for="owner[instructions]">Entry Instructions:</label> </td>
      <td id="owner[instructions]"><%= @owner.instructions %></td>
  </tr>

  <tr>
    <td><label for="owner[door_code]">Door Code:</label></td>
      <td id="owner[door_code]"><%= @owner.door_code %></td>
  </tr>

  <tr>
    <td><label for="owner[lockbox_code]">Lockbox Code:</label></td>
      <td id="owner[lockbox_code]"><%= @owner.lockbox_code %></td>
  </tr>

</table>
