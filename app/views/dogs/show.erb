<table class="w3-table w3-bordered">
  <tr>
    <th colspan="2"><h1><%= "#{@dog.name}" %></h1></th>
  </tr>

  <tr>
    <td><label for="owner_name">Owner:</label></td>
    <td id="owner_name"><a href="/owners/<%= @dog.owner_id %>"><%= @dog.owner.name %></a></td>
  </tr>

  <tr>
    <td><label for="name">Name:</label></td>
    <td id="name"><%= @dog.name %></td>
  </tr>

  <tr>
    <td><label for="breed">Breed:</label></td>
    <td id="breed"><%= @dog.breed %></td>
  </tr>

  <tr>
    <td><label for="birthday">Birthday:</label></td>
    <td id="birthday"><%= @dog.birthday %></td>
  </tr>

  <tr>
    <td>
      <label for="dog[appearance]">Appearance:</label>
    </td>
    <td id="dog[appearance]">
      <%= @dog.appearance %>
    </td>
  </tr>

  <tr>
    <td><label for="temperament">Temperament:</label></td>
    <td id="temperament"><%= @dog.temperament %></td>
  </tr>

  <tr>
    <td><label for="notes">Notes:</label></td>
    <td id="notes"><%= @dog.notes %></td>
  </tr>

  <tr>
    <th colspan="2">
      <a class="w3-btn w3-bar w3-yellow" href="/dogs/<%= @dog.id %>/edit">Edit Dog</a>
    </th>
  </tr>
</table>
