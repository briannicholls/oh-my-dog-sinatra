<h1>Edit User</h1>

<form action="/users/<%= @user.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
<table>
  <tr>
    <td><label for="user[first_name]">First Name:</label></td>
    <td><input type="text" name="user[first_name]" value="<%= @user.first_name %>"></td>
  </tr>

  <tr>
    <td><label for="user[last_name]">Last Name:</label></td>
    <td><input type="text" name="user[last_name]" value="<%= @user.last_name %>"></td>
  </tr>

  <tr>
    <td><label for="user[email]">Email:</label></td>
    <td><input type="text" name="user[email]" value="<%= @user.email %>"></td>
  </tr>

  <tr>
    <td></td>
    <td><input type="submit" value="Update"></td>
  </tr>
</table>
</form>

<% if logged_in? and @user.id == current_user.id %>
<form action="/users/<%= @user.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <label for="delete">Delete My Account: </label>
  <input type="submit" name="delete" value="Delete Account">
</form
<% end %>
<nav>
  <a href="/users/<%= @user.id %>">Back</a>
</nav>
